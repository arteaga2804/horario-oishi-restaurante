{
  "name": "sistema-horarios-restaurante-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "build": "npm run build --workspace=frontend",
    "start:backend": "npm start --workspace=backend",
    "dev": "concurrently \"npm:dev --workspace=backend\" \"npm:dev --workspace=frontend\""
  },
  "devDependencies": {
    "concurrently": "^9.2.0",
    "npm-run-all": "^4.1.5"
  },
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.542.0",
    "react-toastify": "^11.0.5"
  }
}
